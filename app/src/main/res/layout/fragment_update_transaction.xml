<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.update_transaction.UpdateTransactionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="35dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/modifyTextJudulLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_title"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:alpha="0.9"/>

            <EditText
                android:id="@+id/modifyTextJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:minHeight="48dp"
                android:labelFor="@id/modifyTextJudulLabel"
                android:hint="@string/new_transaction_title"
                android:textColorHint="@color/cardview_dark_background"
                android:autofillHints="judul"/>

            <TextView
                android:id="@+id/modifyTextNominalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_amount"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:alpha="0.9"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/modifyTextNominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:labelFor="@id/modifyTextNominalLabel"
                android:hint="@string/edit_amount_of_transaction"
                android:textColorHint="@color/cardview_dark_background"
                android:autofillHints="nominal"/>

            <TextView
                android:id="@+id/modifyLocationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_lokasi"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:alpha="0.9"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/editTextLokasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:minHeight="48dp"
                android:labelFor="@id/modifyLocationLabel"
                android:hint="@string/edit_your_location_data"
                android:textColorHint="@color/cardview_dark_background"
                android:autofillHints="nominal"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonUpdate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cornerRadius="32dp"
                android:text="@string/btn_update"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>